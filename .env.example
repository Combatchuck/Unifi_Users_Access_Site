# Copy this to `.env` and fill values (do NOT commit your real .env)
# Recommended: copy `.env.example` -> `.env` and edit values locally

# MongoDB connection:
# Use a single URL for simplicity. Examples:
#  - No auth, container name: MONGO_URL=mongodb://web-portal-mongo:27017/web-portal
#  - With auth: MONGO_URL=mongodb://user:password@mongo-host:27017/web-portal
#  - URI options (replica set, TLS): see MongoDB docs
MONGO_URL=mongodb://localhost:27017/web-portal
DB_NAME=web-portal  # (optional) fallback DB name used by some scripts

# Email / SMTP (used for invites and notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false  # true for SMTPS (465) or false for STARTTLS
EMAIL_USER=your_email@example.com
# NOTE: set EMAIL_PASS in your .env (do NOT commit credentials)
EMAIL_PASS=your_email_password
EMAIL_FROM="User Access Portal <noreply@gate.com>"

# General site config
SITE_NAME="User Access Portal"
INVITE_SITE1_NAME="Neighborhood Gate"
INVITE_SITE2_NAME="Neighborhood Pool"
INVITE_SITE_COUNT=2  # 1 or 2
SHOW_LPR_DATA=YES  # YES|NO — hides LPR UI when NO

# Upstream API (UniFi/Protect)
UNIFA_API_URL=https://api.example.com
UNIFA_BEARER_TOKEN=your_unifa_token  # prefer token over username/password when possible

# Admin & Access
ADMIN_EMAILS=admin@example.com  # comma-separated list

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10

# Session / UI defaults
SESSION_TIMEOUT_MS=3600000
DARK_MODE_DEFAULT=false

# Unifi Protect (if using capture)
UNIFI_PROTECT_API_KEY=your_api_key  # preferred
UNIFI_PROTECT_USERNAME=your_protect_username  # optional (use only for test/local)
UNIFI_PROTECT_PASSWORD=your_password
UNIFI_PROTECT_HOST=protect-host
UNIFI_PROTECT_PORT=443
UNIFI_PROTECT_VERIFY_SSL=true

# Timezone
TIMEZONE=America/New_York

# Debug / Logging controls (use false in production)
DEBUG_API=false
ALLOW_RAW_LOGS=false
STORE_RAW_MESSAGES=false
ALLOW_RAW_PLATE_LOG=false

# Tracking_PINs (PIN/QR tracking) — preferred to use MONGO_URL and UNIFA_* above
# If necessary, set a tracking-specific URL:
# MONGO_URL_TRACK=mongodb://localhost:27017/web-portal-tracking

# Matching settings (default matching window in seconds)
TIME_DELTA_SECONDS=60

# Outputs for Tracking_PINs
OUTPUT_DIR="./Tracking_PINs/outputs"

# Tips:
# - Do not commit `.env` to git. Add it to .gitignore or use Docker secrets for production.
# - For Docker Compose, use an `env_file: - ./.env` or `--env-file` when running compose.
# - For production, place sensitive credentials in Docker secrets, Vault, or your cloud provider's secret manager and reference them in your Compose file or entrypoint script.
# - If you need local/test values for Protect, prefer `UNIFI_PROTECT_API_KEY` over username/password.

