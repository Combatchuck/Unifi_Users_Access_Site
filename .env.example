# Copy this to `.env` and fill values (do NOT commit your real .env)
MONGO_URL=mongodb://localhost:27017/web-portal
# Database name used by consolidation and other scripts
DB_NAME=web-portal

EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
# NOTE: EMAIL_PASS is required to send emails. Set EMAIL_PASS in your .env (do NOT commit real credentials)
EMAIL_PASS=your_email_password
EMAIL_FROM="User Access Portal <noreply@gate.com>"

# Site display name used in the UI. Defaults to "User Access Portal" if unset.
SITE_NAME="User Access Portal"

# Invite button labels (display names for each invite destination)
INVITE_SITE1_NAME="Neighborhood Gate"
INVITE_SITE2_NAME="Neighborhood Pool"
# Number of invite buttons to display: 1 or 2 (defaults to 2)
# Changing this value will add or remove invite buttons on the site UI
INVITE_SITE_COUNT=2

# Whether LPR data (tiles, per-plate last-seen, counts, and the LPR Query dashboard link) should be displayed on the public site.
# Set to YES to show LPR-related information, or NO to hide all LPR data from the public UI.
# WARNING: When set to NO, the LPR dashboard route will return a 404/not-available response.
SHOW_LPR_DATA=YES

UNIFA_API_URL=https://api.example.com
UNIFA_BEARER_TOKEN=your_unifa_token

# Admin Dashboard Access
ADMIN_EMAILS=admin@example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10

# Session Configuration
SESSION_TIMEOUT_MS=3600000
DARK_MODE_DEFAULT=false

# Unifi Protect
UNIFI_PROTECT_API_KEY=your_api_key
# Either set an API key or provide a local Protect account. Do NOT commit production credentials.
# Local Protect console account (set to a local/test account you control; avoid using cloud or production admin accounts)
UNIFI_PROTECT_USERNAME=your_protect_username
UNIFI_PROTECT_PASSWORD=your_password
UNIFI_PROTECT_HOST=protect-host
UNIFI_PROTECT_PORT=443
UNIFI_PROTECT_VERIFY_SSL=true

# Timezone
TIMEZONE=America/New_York

# Debug / Logging controls
# Set DEBUG_API=true to allow printing full script stdout/stderr and other debug output.
DEBUG_API=false
# Set ALLOW_RAW_LOGS=true to allow printing raw PII-like values (ONLY in local dev). Keep false for public repos.
ALLOW_RAW_LOGS=false
# Whether to store raw messages/detected thumbnails in MongoDB (useful for debugging; NOT recommended for public/production)
STORE_RAW_MESSAGES=false
# Whether to store plaintext license plate values in `license_plate_raw` (only if true or ALLOW_RAW_LOGS=true)
ALLOW_RAW_PLATE_LOG=false

# Tracking_PINs (PIN/QR tracking) configuration
# MongoDB connection used by the tracking scripts (track_pins.py prefers MONGODB_HOST or MONGO_URL)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=web-portal

# API settings for fetching PIN/QR events (used by fetch/track scripts)
# Example: API_URL="https://protect.example/api/v1/developer/system/logs"
API_URL=""
API_METHOD=GET
# JSON string of headers; Example: API_HEADERS_JSON='{"Authorization": "Bearer <token>"}'
API_HEADERS_JSON='{"Authorization": "Bearer <token>"}'

# Matching settings (default matching window in seconds)
TIME_DELTA_SECONDS=60

# Outputs for Tracking_PINs
OUTPUT_DIR="./Tracking_PINs/outputs"

